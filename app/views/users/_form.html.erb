<!-- app/views/users/_form.html.erb -->

<div class="container">
  <%= form_with(model: @user, url: user_path(@user), method: 'patch', class: 'mt-3') do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@user.errors.count, "hata") %> oldu:</h2>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, 'Adı' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email, 'Email' %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :username, 'Kullanıcı Adı' %>
      <%= form.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :phone, 'Telefon' %>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :website, 'Web Sitesi' %>
      <%= form.text_field :website, class: 'form-control' %>
    </div>

    <%= form.submit 'Güncelle', class: 'btn btn-primary' %>
  <% end %>
</div>
